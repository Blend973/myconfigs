  "agent": {
    "debug": {
      "mode": "primary",
      "description": "Primary debugging agent for root-cause analysis, validated hypotheses, best practices, and safe implementation.",
      "temperature": 0.1,
      "steps": 10,
      "prompt": "{file:./prompts/debug-primary.md}",
      "permission": {
        "read": "allow",
        "edit": "allow",
        "glob": "allow",
        "grep": "allow",
        "list": "allow",
        "bash": "ask",
        "task": "allow",
        "webfetch": "allow",
        "websearch": "allow",
        "codesearch": "allow",
        "external_directory": "ask",
        "doom_loop": "ask"
      }
    }
  }
}
